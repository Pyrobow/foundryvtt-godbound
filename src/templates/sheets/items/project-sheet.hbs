<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="{{ localize 'Name' }}"/></h1>
    </header>
    
    <div class="editor-section-container" style="min-height: 150px;">
        <div class="sheet-editor-container">
            <h2>{{localize "godbound.common.description"}}</h2>
            {{editor content=data.data.description target="data.description" button=true owner=owner editable=editable}}
        </div>
        <div class="sheet-editor-container">
            <h2>{{localize "godbound.common.notes"}}</h2>
            {{editor content=data.data.notes target="data.notes" button=true owner=owner editable=editable}}
        </div>
    </div>
    <div>
        <table class="item-table">
            <tr>
                <th>
                    {{localize "godbound.common.difficulty"}}
                </th>
                <th>
                    {{localize "godbound.projects.scope"}}
                </th>
                <th>
                    {{localize "godbound.projects.resistance"}}
                </th>
            </tr>
            <tr>
                <td class="item-table-data">
                    <select name="data.difficulty" class="item-table-select">
                            {{#select data.data.difficulty}}
                            {{#each config.projects.difficulty as |name type|}}
                            <option value="{{type}}">{{localize name}}</option>
                            {{/each}}
                            {{/select}}
                        </select> 
                </td>
                <td class="item-table-data">
                    <select name="data.scope" class="item-table-select">
                            {{#select data.data.scope}}
                            {{#each config.projects.scope as |name type|}}
                            <option value="{{type}}">{{localize name}}</option>
                            {{/each}}
                            {{/select}}
                        </select> 
                </td>
                <td class="item-table-data">
                    <input name="data.resistance" class="item-table-input" type="number" value="{{data.data.resistance}}" data-dtype="Number"/> 
                </td>
            </tr>
        </table>
        <table class="item-table">
            <tr>
                <th>
                    {{localize "godbound.projects.dominionSpent"}}
                </th>
                <th>
                    {{localize "godbound.projects.influenceCommitted"}}
                </th>
                <th>
                    {{localize "godbound.projects.isCompleted"}}
                </th>
            </tr>
            <tr>
                <td class="item-table-data">
                    <input name="data.dominionSpent" class="item-table-input" type="number" value="{{data.data.dominionSpent}}" data-dtype="Number"/> 
                </td>
                <td class="item-table-data">
                    <input name="data.influenceCommitted" class="item-table-input" type="number" value="{{data.data.influenceCommitted}}" data-dtype="Number"/> 
                </td>
				<td class="item-table-data">
                    <input name="data.isCompleted" class="item-table-input" type="checkbox" {{checked data.data.isCompleted}}/>
                </td>
            </tr>
        </table>
    </div>
</form>
