<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="{{ localize 'Name' }}"/></h1>
    </header>
    
    <div class="editor-section-container" style="min-height: 150px;">
        <div class="sheet-editor-container">
            <h2>{{localize "godbound.common.description"}}</h2>
            {{editor content=data.data.description target="data.description" button=true owner=owner editable=editable}}
        </div>
        <div class="sheet-editor-container">
            <h2>{{localize "godbound.common.notes"}}</h2>
            {{editor content=data.data.notes target="data.notes" button=true owner=owner editable=editable}}
        </div>
    </div>
    <div>
        <table class="item-table">
                <tr>
                    <th>
                        {{localize "godbound.thaumaturgy.invocationLevel"}}
                    </th>
                    <th>
                        {{localize "godbound.thaumaturgy.arcaneConnectionRequired"}}
                    </th>
                </tr>
                <tr>
                    <td class="item-table-data">
                        <select name="data.invocation" class="item-table-select">
                            {{#select data.data.invocation}}
                            {{#each config.thaumaturgy.invocationLevels as |name type|}}
                            <option value="{{type}}">{{localize name}}</option>
                            {{/each}}
                            {{/select}}
                        </select>
                    </td>
                    <td class="item-table-data">
                        <input name="data.arcaneConnectionRequired" class="item-table-input" type="checkbox" {{checked data.data.arcaneConnectionRequired}}/>
                    </td>
                </tr>
            </table>
            <table class="item-table">
                <tr>
                    <th>
                        {{localize "godbound.thaumaturgy.sceneEffort"}}
                    </th>
                    <th>
                        {{localize "godbound.thaumaturgy.dayEffort"}}
                    </th>
                    <th>
                        {{localize "godbound.thaumaturgy.instantCastDamage"}}
                    </th>
                </tr>
                <tr>
                    <td class="item-table-data">
                        <input name="data.sceneEffort" class="item-table-input" type="text" value="{{data.data.sceneEffort}}" data-dtype="Number" /> 
                    </td>
                    <td class="item-table-data">
                        <input name="data.dayEffort" class="item-table-input" type="text" value="{{data.data.dayEffort}}" data-dtype="Number" /> 
                    </td>
                    <td class="item-table-data">
                        <input name="data.instantCastDamage" class="item-table-input" type="text" value="{{data.data.instantCastDamage}}" /> 
                    </td>
                </tr>
            </table>
    </div>
    
</form>
