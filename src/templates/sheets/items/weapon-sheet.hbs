<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="{{ localize 'Name' }}"/></h1>
    </header>
    <div>
        <div class="editor-section-container">
            <div class="sheet-editor-container">
                <h2>{{localize "godbound.common.description"}}</h2>
                {{editor content=data.data.description target="data.description" button=true owner=owner editable=editable}}
            </div>
            <div class="sheet-editor-container">
                <h2>{{localize "godbound.common.notes"}}</h2>
                {{editor content=data.data.notes target="data.notes" button=true owner=owner editable=editable}}
            </div>
        </div>
        <div>
            <table class="item-table">
            <tr>
                <th>{{localize "godbound.common.type"}}</th>
                <th>{{localize "godbound.weapon.isThrown"}}</th>
                <th>{{localize "godbound.weapon.range"}}</th>
            </tr>
            <tr>
                <td class="item-table-data">
                    <select name="data.type" class="item-table-select">
                        {{#select data.data.type}}
                        {{#each config.weaponTypes as |name type|}}
                        <option value="{{type}}">{{localize name}}</option>
                        {{/each}}
                        {{/select}}
                    </select>
                </td>
                <td class="item-table-data">
                    <input name="data.isThrown" class="item-table-input" type="checkbox" {{checked data.data.isThrown}}/>
                </td>
                <td class="item-table-data">
                    <input name="data.range" class="item-table-input" type="number" value="{{data.data.range}}" data-dtype="Number" /> 
                </td>
            </tr>
        </table>
        <table class="item-table">
            <tr>
                <th>
                    {{localize "godbound.common.attribute"}}
                </th>
                <th>
                    {{localize "godbound.weapon.attackBonusMod"}}
                </th>
            </tr>
            <tr>
                <td class="item-table-data">
                    <select name="data.attribute" class="item-table-select">
                        {{#select data.data.attribute}}
                        {{#each config.attributes as |name type|}}
                        <option value="{{type}}">{{localize name}}</option>
                        {{/each}}
                        {{/select}}
                    </select>
                </td>
                <td class="item-table-data">
                    <input name="data.attackBonusMod" class="item-table-input" type="number" value="{{data.data.attackBonusMod}}" data-dtype="Number" />
                </td>
            </tr>
        </table>
        <table class="item-table">
            <tr>
                <th>
                    {{localize "godbound.weapon.damage"}}
                </th>
                <th>
                    {{localize "godbound.weapon.isMagic"}}
                </th>
                <th>
                    {{localize "godbound.weapon.isStraight"}}
                </th>
            </tr>
            <tr>
                <td class="item-table-data">
                    <input name="data.damage.roll" class="item-table-input" type="text" value="{{data.data.damage.roll}}"/>
                </td>
                <td class="item-table-data">
                    <input name="data.damage.isMagic" class="item-table-input" type="checkbox" {{checked data.data.damage.isMagic}}/>
                </td>
                <td class="item-table-data">
                    <input name="data.damage.isStraight" class="item-table-input" type="checkbox" {{checked data.data.damage.isStraight}}/>
                </td>
            </tr>
        </table>
        </div>
    </div>
</form>
