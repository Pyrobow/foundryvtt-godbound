<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="{{ localize 'Name' }}"/></h1>
    </header>
    
    <div class="editor-section-container" style="min-height: 150px;">
        <div class="sheet-editor-container">
            <h2>{{localize "godbound.common.description"}}</h2>
            {{editor content=data.data.description target="data.description" button=true owner=owner editable=editable}}
        </div>
        <div class="sheet-editor-container">
            <h2>{{localize "godbound.strifes.theLesserStrife"}}</h2>
            {{editor content=data.data.lesserDescription target="data.lesserDescription" button=true owner=owner editable=editable}}
        </div>
        <div class="sheet-editor-container">
            <h2>{{localize "godbound.common.notes"}}</h2>
            {{editor content=data.data.notes target="data.notes" button=true owner=owner editable=editable}}
        </div>
    </div>
    <table class="item-table">
                <tr>
                    <th>
                        {{localize "godbound.strifes.isLesser"}}
                    </th>
                    <th>
                        {{localize "godbound.strifes.lesserMastery"}}
                    </th>
                </tr>
                <tr>
                    <td class="item-table-data">
                        <input name="data.isLesser" class="item-table-input" type="checkbox" {{checked data.data.isLesser}}/>
                    </td>
                    <td class="item-table-data">
                        <select name="data.lesserMastery" class="item-table-select">
                            {{#select data.data.lesserMastery}}
                            {{#each config.strifes.lesserStrifeMasteries as |name type|}}
                            <option value="{{type}}">{{localize name}}</option>
                            {{/each}}
                            {{/select}}
                        </select> 
                    </td>
                </tr>
            </table>
    
</form>
